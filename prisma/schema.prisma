generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime
  text      String
  userId    String
  User      User     @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime
  Post      Post[]
}
